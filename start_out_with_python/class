class coin:
    def __init__(self):
        self.face = '1'
        run_times = raw_input('please enter the number you want to flip')
        coin.flip_times(self, times=run_times)


    def flip_coin(self):
        import random

        self.face = random.randrange(self, 1, 2)
        if self.face == 1:
            return 'head'
        elif self.face == 2:
            return 'tail'
        return 'Error'

    def flip_times(self, times):
        if times is int:
            for i in range(times):
                result = coin.flip_coin(self)
                print result



